@using Examen_Empelado.Models
@model EmpleadoCLS
@{
    ViewBag.Title = "Editar";
    List<SelectListItem> ListaEstado = (List<SelectListItem>)ViewBag.ListaEstado;
}

<h2>Editar</h2>
<div class="col-lg-12">

    @using (Html.BeginForm("Editar", "Empelado", FormMethod.Post, new { @id = "frmAgregar" }))
    {
        <div>

            <div class="col-lg-4">
                @Html.LabelFor(p => p.Nombre)
                @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control" })

            </div>
            <div class="col-lg-4">
                @Html.LabelFor(p => p.ApellidoPaterno)
                @Html.TextBoxFor(p => p.ApellidoPaterno, new { @class = "form-control" })
                @Html.ValidationMessage("ApellidoPaterno", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.LabelFor(p => p.ApellidoMaterno)
                @Html.TextBoxFor(p => p.ApellidoMaterno, new { @class = "form-control" })
                @Html.ValidationMessage("ApellidoMaterno", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.LabelFor(p => p.NumEmpleado)
                @Html.TextBoxFor(p => p.NumEmpleado, new { @class = "form-control" })
                @Html.ValidationMessage("NumEmpleado", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.LabelFor(p => p.correo)
                @Html.TextBoxFor(p => p.correo, new { @class = "form-control" })
                @Html.ValidationMessage("correo", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.LabelFor(p => p.Telefono)
                @Html.TextBoxFor(p => p.Telefono, new { @class = "form-control" })
                @Html.ValidationMessage("Telefono", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.LabelFor(p => p.Direccion)
                @Html.TextBoxFor(p => p.Direccion, new { @class = "form-control" })
                @Html.ValidationMessage("Direccion", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                <i class="fa fa-calendar" aria-hidden="true"></i>
                @Html.LabelFor(model => model.FechaNac, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.FechaNac, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                @Html.ValidationMessage("FechaNac", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                <i class="fa fa-cube" aria-hidden="true"></i>
                @Html.LabelFor(p => p.idEstadoLogico)
                @Html.DropDownList("idEstadoLogico", ListaEstado, null, new { @class = "form-control" })

            </div>


            <div class="col-lg-6">

                @Html.Hidden("dcsd");
                <button type="submit" class="btn btn-info btn-lg btn-block " @*data-toggle="modal" data-target="#exampleModal"*@>
                    Guardar cambios
                </button>
            </div>
            <div class="col-lg-6">
                @Html.Hidden("dcsd");
                @Html.ActionLink("Regresar", "Index", "Empelado", null, new { @class = "btn btn-danger btn-lg btn-block" })
                
            </div>





        </div>

    }
 



</div>
